

<p style="color: green"><%= notice %></p>


<div class="container">
  <%= render @publisher %>
  <div>
    <%= link_to "Edit this publisher", edit_publisher_path(@publisher) %> |
    <%= link_to "Back to publishers", publishers_path %>
    <%= button_to "Destroy this publisher", @publisher, method: :delete %>
  </div>
  <br>
  <br>
  <div>
    <h2>Books by <%= @publisher.name %></h2>
      <ul>
        <% @books.each do |book| %>
          <h4><%= book.title %></h4>
          <h5><%= "#{Author.find(book.author_id).first_name} #{Author.find(book.author_id).last_name}" %></h5>

          <p><%= link_to "Show this book", book_path(book) %></p>

        <% end %>
      </ul>
  </div>
</div>
